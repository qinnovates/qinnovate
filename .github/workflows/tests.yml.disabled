name: Tests

on:
  push:
    branches: [main]
    paths:
      - 'MAIN/legacy-core/oni-framework/**'
      - 'autodidactive/oni-academy/**'
      - 'MAIN/legacy-core/tara-nsec-platform/**'
      - '.github/workflows/tests.yml'
  pull_request:
    branches: [main]
    paths:
      - 'MAIN/legacy-core/oni-framework/**'
      - 'autodidactive/oni-academy/**'
      - 'MAIN/legacy-core/tara-nsec-platform/**'
  workflow_dispatch:

jobs:
  test-oni-framework:
    name: ONI Framework - Python ${{ matrix.python-version }} (${{ matrix.os }})
    runs-on: ${{ matrix.os }}
    strategy:
      fail-fast: false
      matrix:
        python-version: ['3.9', '3.10', '3.11', '3.12']
        os: [ubuntu-latest, macos-latest]

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v6
        with:
          python-version: ${{ matrix.python-version }}

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pytest pytest-cov
          pip install -e MAIN/legacy-core/oni-framework

      - name: Run tests
        run: |
          cd MAIN/legacy-core/oni-framework
          pytest tests/ -v --cov=oni --cov-report=xml

      - name: Upload coverage
        uses: codecov/codecov-action@v5
        if: matrix.python-version == '3.11' && matrix.os == 'ubuntu-latest'
        with:
          file: MAIN/legacy-core/oni-framework/coverage.xml
          flags: oni-framework
          name: oni-framework-coverage

  test-tara:
    name: TARA - Python ${{ matrix.python-version }} (${{ matrix.os }})
    runs-on: ${{ matrix.os }}
    strategy:
      fail-fast: false
      matrix:
        python-version: ['3.9', '3.10', '3.11', '3.12']
        os: [ubuntu-latest, macos-latest]

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v6
        with:
          python-version: ${{ matrix.python-version }}

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pytest pytest-cov
          pip install -e MAIN/legacy-core/tara-nsec-platform[dev]

      - name: Run tests
        run: |
          cd MAIN/legacy-core/tara-nsec-platform
          pytest tests/ -v --cov=tara_mvp --cov-report=xml

      - name: Upload coverage
        uses: codecov/codecov-action@v5
        if: matrix.python-version == '3.11' && matrix.os == 'ubuntu-latest'
        with:
          file: MAIN/legacy-core/tara-nsec-platform/coverage.xml
          flags: tara
          name: tara-coverage

  test-oni-academy:
    name: ONI Academy - Python ${{ matrix.python-version }} (${{ matrix.os }})
    runs-on: ${{ matrix.os }}
    strategy:
      fail-fast: false
      matrix:
        python-version: ['3.9', '3.10', '3.11', '3.12']
        os: [ubuntu-latest, macos-latest]

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v6
        with:
          python-version: ${{ matrix.python-version }}

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pytest pytest-cov
          pip install -e MAIN/legacy-core/oni-framework
          pip install -e autodidactive/oni-academy[dev]

      - name: Run tests
        run: |
          cd autodidactive/oni-academy
          pytest tests/ -v --cov=oni_academy --cov-report=xml || echo "No tests yet"

      - name: Upload coverage
        uses: codecov/codecov-action@v5
        if: matrix.python-version == '3.11' && matrix.os == 'ubuntu-latest'
        with:
          file: autodidactive/oni-academy/coverage.xml
          flags: oni-academy
          name: oni-academy-coverage
        continue-on-error: true

  test-summary:
    name: Test Summary
    needs: [test-oni-framework, test-oni-academy, test-tara]
    runs-on: ubuntu-latest
    if: always()
    steps:
      - name: Check test results
        run: |
          if [ "${{ needs.test-oni-framework.result }}" == "failure" ] || [ "${{ needs.test-tara.result }}" == "failure" ]; then
            echo "::error::Some tests failed"
            exit 1
          fi
          echo "All tests passed!"
