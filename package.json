{
  "name": "qinnovate-com",
  "type": "module",
  "version": "2.0.0",
  "scripts": {
    "prebuild": "mkdir -p docs/data docs/papers && cp shared/qtara-registrar.json docs/data/qtara-registrar.json && cp shared/derivation-timeline.json docs/data/derivation-timeline.json && [ -f paper/main.pdf ] && cp paper/main.pdf docs/papers/qif-bci-security-2026.pdf || true",
    "dev": "npm run prebuild && astro dev",
    "build": "npm run prebuild && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "fetch-news": "node scripts/fetch-news.mjs",
    "type-check": "tsc --noEmit",
    "sync": "node scripts/sync-agents.mjs",
    "verify": "python3 scripts/verify/run_all.py",
    "verify:citations": "python3 scripts/verify/verify_citations.py",
    "verify:facts": "python3 scripts/verify/verify_facts.py",
    "verify:blogs": "python3 scripts/verify/audit_blog_claims.py",
    "verify:crossrefs": "python3 scripts/verify/verify_crossrefs.py",
    "generate:ethics": "npx tsx scripts/generate-ethics-md.ts"
  },
  "dependencies": {
    "@astrojs/react": "^4.2.0",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.3.0",
    "@react-hook/window-size": "^3.1.1",
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/katex": "^0.16.0",
    "@types/three": "^0.172.0",
    "astro": "^5.17.0",
    "astro-pagefind": "^1.8.5",
    "fast-xml-parser": "^5.3.6",
    "katex": "^0.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-force-graph-3d": "^1.29.1",
    "tailwindcss": "^4.0.0",
    "three": "^0.172.0",
    "three-forcegraph": "^1.43.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "jsdom": "^28.0.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18"
  }
}
