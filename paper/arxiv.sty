% arxiv.sty â€” Minimal arXiv-style formatting
% Based on standard article class with common academic paper conventions

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{arxiv}[2026/02/14 Minimal arXiv paper style]

% ---------- Page geometry ----------
\RequirePackage[margin=1in]{geometry}

% ---------- Font and encoding ----------
\RequirePackage[T1]{fontenc}
\RequirePackage[utf8]{inputenc}
\RequirePackage{lmodern}
\RequirePackage{microtype}

% ---------- Math ----------
\RequirePackage{amsmath,amssymb,amsfonts}

% ---------- Graphics and figures ----------
\RequirePackage{graphicx}
\RequirePackage{float}
\RequirePackage{subcaption}

% ---------- Tables ----------
\RequirePackage{booktabs}
\RequirePackage{tabularx}
\RequirePackage{multirow}
\RequirePackage{array}

% ---------- Colors and hyperlinks ----------
\RequirePackage[dvipsnames]{xcolor}
\RequirePackage[colorlinks=true,linkcolor=MidnightBlue,citecolor=ForestGreen,urlcolor=BrickRed]{hyperref}

% ---------- Citations ----------
\RequirePackage[numbers,sort&compress]{natbib}

% ---------- Lists ----------
\RequirePackage{enumitem}
\setlist{nosep,leftmargin=*}

% ---------- Code listings ----------
\RequirePackage{listings}
\lstset{
  basicstyle=\ttfamily\small,
  breaklines=true,
  frame=single,
  rulecolor=\color{gray!30},
  backgroundcolor=\color{gray!5},
}

% ---------- Misc ----------
\RequirePackage{xspace}
\RequirePackage{url}

% ---------- Section formatting ----------
\RequirePackage{titlesec}
\titleformat{\section}{\large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalsize\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\normalsize\itshape}{\thesubsubsection}{1em}{}

% ---------- Header ----------
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\fancyfoot[C]{\thepage}

% ---------- Abstract environment ----------
\renewenvironment{abstract}{%
  \begin{center}
    \textbf{Abstract}
  \end{center}
  \begin{quote}\small
}{%
  \end{quote}
  \vspace{1em}
}

% ---------- Title formatting ----------
\renewcommand{\maketitle}{%
  \begin{center}
    {\LARGE\bfseries\@title\par}
    \vspace{0.8em}
    {\large\@author\par}
    \vspace{0.4em}
    {\normalsize\@date\par}
  \end{center}
  \vspace{1.5em}
}

% ---------- Custom commands ----------
\newcommand{\qif}{QIF\xspace}
\newcommand{\niss}{NISS\xspace}
\newcommand{\tara}{TARA\xspace}
\newcommand{\cvss}{CVSS\xspace}
\newcommand{\pins}{PINS\xspace}
