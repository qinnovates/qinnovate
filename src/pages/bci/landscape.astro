// --- BA Analysis: Computed Tables ---

// TAM/SAM/SOM — BCI Security Market Sizing
// TAM: Total BCI market * healthcare security spend rate (6.5%)
// SAM: Companies with devices that could adopt security frameworks (~70% of market)
// SOM: First-mover capture potential (10-25% of SAM in years 1-5)
const healthcareSecPct = 0.065; // 6.5% midpoint of 6-7% range
const samPct = 0.70; // ~70% of BCI cos have devices needing security
const klqTamSamSom = (() => {
  // Get median 2024 base and build forward using median CAGR
  const base2024 = (landscape.market_data?.market_size_estimates || [])
    .filter((m: any) => m.year === 2024)
    .map((m: any) => m.value_billion_usd)
    .sort((a: number, b: number) => a - b);
  const median2024 = base2024.length > 0 ? base2024[Math.floor(base2024.length / 2)] : 2.3;

  // Collect CAGRs from forecasts
  const cagrs = (landscape.market_data?.market_size_estimates || [])
    .filter((m: any) => m.cagr_percent)
    .map((m: any) => m.cagr_percent)
    .sort((a: number, b: number) => a - b);
  const medianCagr = cagrs.length > 0 ? cagrs[Math.floor(cagrs.length / 2)] : 15.0;

  const rows = [];
  for (let yr = 2024; yr <= 2035; yr++) {
    const yearsOut = yr - 2024;
    const bciMarket = median2024 * Math.pow(1 + medianCagr / 100, yearsOut);
    const tam = bciMarket * healthcareSecPct;
    const sam = tam * samPct;
    // SOM ramps: 0% in 2024, 5% in 2025, scaling to 25% by 2030+
    const somPct = yr <= 2024 ? 0 : Math.min(0.25, 0.05 + (yr - 2025) * 0.04);
    const som = sam * somPct;
    rows.push({
      year: yr,
      bci_market_B: Number(bciMarket.toFixed(2)),
      sec_spend_rate: '6.5%',
      tam_M: Math.round(tam * 1000),
      sam_M: Math.round(sam * 1000),
      som_pct: `${(somPct * 100).toFixed(0)}%`,
      som_M: Math.round(som * 1000),
      median_cagr: `${medianCagr}%`,
    });
  }
  return rows;
})();

