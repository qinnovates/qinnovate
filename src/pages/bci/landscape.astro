// Investment Momentum — year-over-year growth + cumulative
const klqMomentum = (() => {
  const vc = landscape.market_data?.vc_aggregate_by_year || [];
  const funding = landscape.market_data?.major_funding_rounds || [];

  // Count rounds per year from individual rounds
  const roundsByYear = new Map<number, number>();
  for (const r of funding) {
    const yr = parseInt(String(r.date).slice(0, 4), 10);
    if (!isNaN(yr)) roundsByYear.set(yr, (roundsByYear.get(yr) || 0) + 1);
  }

  let cumulative = 0;
  return vc.map((v: any, i: number) => {
    cumulative += v.total_usd;
    const prevTotal = i > 0 ? vc[i - 1].total_usd : null;
    const yoyGrowth = prevTotal ? ((v.total_usd - prevTotal) / prevTotal * 100).toFixed(0) + '%' : 'N/A';
    return {
      year: v.year,
      total_invested_M: Math.round(v.total_usd / 1_000_000),
      deals: v.deals,
      tracked_rounds: roundsByYear.get(v.year) || 0,
      yoy_growth: yoyGrowth,
      cumulative_invested_M: Math.round(cumulative / 1_000_000),
      security_spend_M: 0,
      gap_M: Math.round(cumulative / 1_000_000),
    };
  });
})();

// Risk Quantification — per-company security exposure
const klqRiskProfile = klqCompanies.map((c: any) => {
  const fundingB = (c.funding_total_usd || 0) / 1_000_000_000;
  const secScore = c.security_posture === 'none_published' ? 0
    : c.security_posture === 'minimal' ? 1
    : c.security_posture === 'basic' ? 2
    : c.security_posture === 'moderate' ? 3 : 4;
  // Risk = funding * device count * inverse security
  const riskIndex = Number((fundingB * Math.max(c.device_count, 1) * (5 - secScore)).toFixed(2));
  return {
    company: c.name,
    type: c.type,
    funding_B: Number(fundingB.toFixed(2)),
    devices: c.device_count,
    security_posture: c.security_posture,
    security_score: `${secScore}/4`,
    attack_surfaces: c.attack_surface_count,
    risk_index: riskIndex,
  };
}).sort((a: any, b: any) => b.risk_index - a.risk_index);

