---
import PageLayout from '../layouts/PageLayout.astro';
import {
  VALIDATION_ENTRIES,
  VALIDATION_TIERS,
  NOT_TESTED,
  TIER_COLORS,
  STATUS_COLORS,
  STATUS_LABELS,
  getValidationStats,
  getEntriesByTier,
} from '../lib/validation-data';

const stats = getValidationStats();
---

<PageLayout
  title="Validation Status"
  description="What has been tested, how it was tested, and what hasn't been tested yet."
  breadcrumbs={[{ label: 'Validation' }]}
  maxWidth="wide"
>
  <div class="max-w-4xl mx-auto">

    <!-- Hero -->
    <section class="mb-20">
      <h1 class="text-3xl sm:text-4xl font-bold font-[family-name:var(--font-heading)] mb-4">
        Validation Status
      </h1>
      <p class="text-lg text-[var(--color-text-muted)] mb-8">
        Transparency about what has been tested, how it was tested, and what remains untested.
        This project is solo research. Honest reporting of validation boundaries is more valuable than overstating results.
      </p>

      <!-- Big Numbers -->
      <div class="grid grid-cols-3 gap-4 mb-8">
        <div class="glass rounded-xl p-6 text-center">
          <div class="text-4xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-accent-primary)]">{stats.totalTested}</div>
          <div class="text-sm text-[var(--color-text-muted)] mt-1">Components Tested</div>
        </div>
        <div class="glass rounded-xl p-6 text-center">
          <div class="text-4xl font-bold font-[family-name:var(--font-heading)]" style="color: #f59e0b;">{stats.totalNotTested}</div>
          <div class="text-sm text-[var(--color-text-muted)] mt-1">Not Yet Tested</div>
        </div>
        <div class="glass rounded-xl p-6 text-center">
          <div class="text-4xl font-bold font-[family-name:var(--font-heading)]" style="color: #94a3b8;">{stats.onRealHardware}</div>
          <div class="text-sm text-[var(--color-text-muted)] mt-1">On Real Hardware</div>
        </div>
      </div>
    </section>

    <!-- Tier Breakdown -->
    <section class="mb-20">
      <h2 class="text-2xl font-bold font-[family-name:var(--font-heading)] mb-6">Validation Tiers</h2>
      <div class="grid gap-3 sm:grid-cols-2 lg:grid-cols-4">
        {VALIDATION_TIERS.map(tier => {
          const count = getEntriesByTier(tier.id as any).length;
          const colors = TIER_COLORS[tier.id as keyof typeof TIER_COLORS];
          return (
            <div class="glass rounded-xl p-4 border-l-4" style={`border-left-color: ${colors.text};`}>
              <div class="flex items-baseline justify-between mb-1">
                <span class="text-sm font-semibold" style={`color: ${colors.text};`}>{tier.label}</span>
                <span class="text-2xl font-bold font-[family-name:var(--font-heading)]" style={`color: ${colors.text};`}>{count}</span>
              </div>
              <p class="text-xs text-[var(--color-text-faint)]">{tier.description}</p>
            </div>
          );
        })}
      </div>
    </section>

    <!-- Validation Entries -->
    <section class="mb-20">
      <h2 class="text-2xl font-bold font-[family-name:var(--font-heading)] mb-6">Tested Components</h2>
      <div class="space-y-4">
        {VALIDATION_ENTRIES.map(entry => {
          const statusMeta = STATUS_COLORS[entry.status as keyof typeof STATUS_COLORS];
          return (
            <div class="glass rounded-xl p-6" id={entry.id.toLowerCase()}>
              <div class="flex flex-wrap items-start justify-between gap-2 mb-3">
                <div>
                  <div class="flex items-center gap-2 mb-1">
                    <span class="font-[family-name:var(--font-mono)] text-xs text-[var(--color-text-faint)]">{entry.id}</span>
                    <span
                      class="text-xs font-semibold px-2 py-0.5 rounded-full"
                      style={`background: ${statusMeta.bg}; color: ${statusMeta.text};`}
                    >
                      {STATUS_LABELS[entry.status as keyof typeof STATUS_LABELS]}
                    </span>
                  </div>
                  <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)]">{entry.component}</h3>
                </div>
                <span class="text-xs text-[var(--color-text-faint)]">{entry.date}</span>
              </div>

              <p class="text-sm text-[var(--color-text-muted)] mb-4">{entry.summary}</p>

              <!-- Tier badges -->
              <div class="flex flex-wrap gap-1.5 mb-4">
                {entry.tiers.map(tierId => {
                  const colors = TIER_COLORS[tierId as keyof typeof TIER_COLORS];
                  const tier = VALIDATION_TIERS.find(t => t.id === tierId);
                  return (
                    <span
                      class="text-xs font-medium px-2 py-0.5 rounded-full border"
                      style={`background: ${colors.bg}; color: ${colors.text}; border-color: ${colors.border};`}
                    >
                      {tier?.label ?? tierId}
                    </span>
                  );
                })}
              </div>

              <!-- Results -->
              <details class="group">
                <summary class="text-xs font-semibold text-[var(--color-accent-primary)] cursor-pointer hover:underline">
                  Details
                </summary>
                <div class="mt-3 space-y-3">
                  <div>
                    <h4 class="text-xs font-bold uppercase text-[var(--color-text-faint)] mb-1">Methodology</h4>
                    <p class="text-sm text-[var(--color-text-muted)]">{entry.methodology}</p>
                  </div>
                  <div>
                    <h4 class="text-xs font-bold uppercase text-[var(--color-text-faint)] mb-1">Results</h4>
                    <ul class="text-sm text-[var(--color-text-muted)] list-disc pl-4 space-y-0.5">
                      {entry.results.map(r => <li>{r}</li>)}
                    </ul>
                  </div>
                  <div>
                    <h4 class="text-xs font-bold uppercase text-[var(--color-text-faint)] mb-1">Limitations</h4>
                    <ul class="text-sm text-[var(--color-text-muted)] list-disc pl-4 space-y-0.5">
                      {entry.limitations.map(l => <li>{l}</li>)}
                    </ul>
                  </div>
                  {entry.related_tara_ids.length > 0 && (
                    <div>
                      <h4 class="text-xs font-bold uppercase text-[var(--color-text-faint)] mb-1">Related TARA Techniques</h4>
                      <div class="flex flex-wrap gap-1.5">
                        {entry.related_tara_ids.map(id => (
                          <a href={`/TARA/${id}/`} class="text-xs font-mono text-[var(--color-accent-primary)] hover:underline">{id}</a>
                        ))}
                      </div>
                    </div>
                  )}
                </div>
              </details>
            </div>
          );
        })}
      </div>
    </section>

    <!-- Featured: Physics Guardrails -->
    <section class="mb-20">
      <div class="glass rounded-xl p-8 border-l-4 border-[var(--color-accent-primary)]">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-xs font-semibold px-2 py-0.5 rounded-full border border-[var(--color-accent-primary)] text-[var(--color-accent-primary)]">Featured</span>
          <span class="font-[family-name:var(--font-mono)] text-xs text-[var(--color-text-faint)]">VAL-007</span>
        </div>
        <h2 class="text-xl font-bold font-[family-name:var(--font-heading)] mb-3">Physics Security Guardrails</h2>
        <p class="text-sm text-[var(--color-text-muted)] mb-4">
          BCI security guardrails derived from physics first principles. 12/13 constraint equations verified as physically sound. 4-layer architecture: Physics Boundary, Signal Integrity, Anomaly Detection, Protocol Enforcement. Independently verified by Claude and Gemini. No published equivalent found.
        </p>
        <div class="flex flex-wrap gap-1.5 mb-4">
          <span class="text-xs font-medium px-2 py-0.5 rounded-full border" style={`background: ${TIER_COLORS.analytical.bg}; color: ${TIER_COLORS.analytical.text}; border-color: ${TIER_COLORS.analytical.border};`}>Analytical Review</span>
          <span class="text-xs font-medium px-2 py-0.5 rounded-full border" style={`background: ${TIER_COLORS.cross_ai.bg}; color: ${TIER_COLORS.cross_ai.text}; border-color: ${TIER_COLORS.cross_ai.border};`}>Cross-AI Verification</span>
        </div>
        <a href="https://github.com/qinnovates/qinnovate/blob/main/qif-framework/qif-sec-guardrails.md" target="_blank" class="text-sm text-[var(--color-accent-primary)] hover:underline">
          Read the full guardrails document
        </a>
      </div>
    </section>

    <!-- Not Yet Tested -->
    <section class="mb-20">
      <h2 class="text-2xl font-bold font-[family-name:var(--font-heading)] mb-2">Not Yet Tested</h2>
      <p class="text-sm text-[var(--color-text-muted)] mb-6">
        These components require resources beyond what a solo researcher can provide. They are listed here for transparency.
      </p>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-[var(--color-border)]">
              <th class="py-2 px-3 text-left font-semibold text-xs text-[var(--color-text-faint)]">Component</th>
              <th class="py-2 px-3 text-left font-semibold text-xs text-[var(--color-text-faint)]">Why Not Tested</th>
              <th class="py-2 px-3 text-left font-semibold text-xs text-[var(--color-text-faint)]">What's Needed</th>
            </tr>
          </thead>
          <tbody>
            {NOT_TESTED.map(item => (
              <tr class="border-b border-[var(--color-border)]/50">
                <td class="py-3 px-3 font-semibold text-[var(--color-text-primary)]">{item.component}</td>
                <td class="py-3 px-3 text-[var(--color-text-muted)]">{item.reason}</td>
                <td class="py-3 px-3">
                  <div class="flex flex-wrap gap-1">
                    {item.required.map(r => (
                      <span class="text-xs px-1.5 py-0.5 rounded bg-[var(--color-border)] text-[var(--color-text-faint)]">{r}</span>
                    ))}
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>

    <!-- Machine Readable -->
    <section class="mb-12">
      <div class="glass rounded-xl p-6 text-center">
        <p class="text-sm text-[var(--color-text-muted)] mb-3">Machine-readable validation data</p>
        <a href="/data/validation-registry.json" class="text-sm font-[family-name:var(--font-mono)] text-[var(--color-accent-primary)] hover:underline">
          /data/validation-registry.json
        </a>
        <span class="text-[var(--color-text-faint)] mx-2">|</span>
        <a href="https://github.com/qinnovates/qinnovate/blob/main/VALIDATION.md" target="_blank" class="text-sm text-[var(--color-accent-primary)] hover:underline">
          VALIDATION.md on GitHub
        </a>
      </div>
    </section>

  </div>
</PageLayout>
