---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { QIF_VERSION, STATS } from '../lib/qif-constants';
import { THREAT_VECTORS } from '../lib/threat-data';
const totalTechniques = THREAT_VECTORS.length;
import '../styles/global.css';

const workingGroups = [
  {
    name: 'Threat Intelligence',
    chair: 'Open',
    focus: 'Maintain the TARA atlas, validate NISS scores, coordinate responsible disclosure',
    icon: '&#9670;',
    color: 'var(--color-accent-primary)',
    outputs: ['TARA technique registry updates', 'NISS scoring methodology', 'CVE coordination pipeline'],
  },
  {
    name: 'Standards Development',
    chair: 'Open',
    focus: 'Evolve the QIF specification, manage RFC process, maintain backwards compatibility',
    icon: '&#9632;',
    color: 'var(--color-accent-secondary)',
    outputs: ['QIF version releases', 'Band model amendments', 'Interoperability specifications'],
  },
  {
    name: 'Audit & Certification',
    chair: 'Open',
    focus: 'Develop professional audit methodologies and certification criteria for BCI security',
    icon: '&#9650;',
    color: '#f59e0b',
    outputs: ['Audit control frameworks', 'Certification exam blueprints', 'Assessor training materials'],
  },
  {
    name: 'Regulatory Liaison',
    chair: 'Open',
    focus: 'Map QIF controls to FDA, EU MDR, and emerging neuroethics regulations',
    icon: '&#9733;',
    color: 'var(--color-status-safe)',
    outputs: ['Regulatory crosswalk documents', 'Submission guidance templates', 'Policy position papers'],
  },
];

const memberBenefits = [
  {
    tier: 'Individual',
    audience: 'Researchers, engineers, and security professionals',
    benefits: [
      'Access to restricted threat intelligence feeds',
      'Working group participation',
      'Professional development resources',
      'Member directory listing',
      'Conference presentation opportunities',
    ],
    color: 'var(--color-accent-secondary)',
  },
  {
    tier: 'Organizational',
    audience: 'Neurotech companies, medical device manufacturers, and research labs',
    benefits: [
      'Everything in Individual, plus:',
      'Early access to draft standards',
      'Voting rights on specification changes',
      'Logo use and compliance attestation',
      'Priority threat briefings',
      'Regulatory crosswalk documents',
    ],
    color: 'var(--color-accent-primary)',
  },
  {
    tier: 'Founding Partner',
    audience: 'Organizations shaping the Alliance from day one',
    benefits: [
      'Everything in Organizational, plus:',
      'Board advisory seat',
      'Co-authorship on foundational documents',
      'Named recognition in Alliance publications',
      'Direct input on certification criteria',
      'Keynote opportunities at Alliance events',
    ],
    color: 'var(--color-accent-tertiary)',
  },
];

const principles = [
  { name: 'Independence', description: 'The Alliance is vendor-neutral. We don\'t build BCI hardware — we build the frameworks that make hardware safe.' },
  { name: 'Transparency', description: 'All core standards are published under open licenses. Governance decisions are documented and publicly auditable.' },
  { name: 'Rigor', description: 'Every threat technique is scored, every control is testable, every claim is traceable to evidence.' },
  { name: 'Dual-Use Awareness', description: 'Every attack vector maps to a therapeutic analog. Security and clinical care are inseparable at the neural interface.' },
];
---

<BaseLayout
  title="Neural Alliance — Qinnovate"
  description="Qinnovate Neural Alliance: A professional standards body modeled after ISACA, dedicated to BCI security governance, threat intelligence, professional certification, and audit methodology for the neural frontier."
>
  <Nav />

  <!-- ═══ ACTIVE DEVELOPMENT BANNER ═══ -->
  <div class="bg-gradient-to-r from-[var(--color-accent-tertiary)]/20 via-[var(--color-accent-primary)]/15 to-[var(--color-accent-secondary)]/20 border-b border-[var(--color-accent-tertiary)]/30">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-3 flex flex-col sm:flex-row items-center justify-center gap-2 text-center">
      <span class="text-xs font-bold tracking-wider uppercase px-2.5 py-1 rounded-full bg-[var(--color-accent-tertiary)]/20 text-[var(--color-accent-tertiary)] border border-[var(--color-accent-tertiary)]/30">
        In Active Development
      </span>
      <p class="text-sm text-[var(--color-text-muted)]">
        The Neural Alliance is forming. We are actively seeking <strong class="text-[var(--color-text-primary)]">founding partners</strong> to shape governance, certification, and the future of neural security standards.
      </p>
      <a href="#join" class="text-sm font-medium text-[var(--color-accent-tertiary)] hover:text-[var(--color-accent-primary)] transition-colors whitespace-nowrap">
        Get involved &#8594;
      </a>
    </div>
  </div>

  <!-- ═══ HERO ═══ -->
  <section class="relative min-h-[65vh] flex items-center justify-center px-4 overflow-hidden">
    <div class="absolute inset-0 bg-[var(--color-bg-deep)]">
      <div class="absolute inset-0 opacity-30" style="background: radial-gradient(ellipse at 50% 40%, rgba(59,130,246,0.12) 0%, transparent 60%), radial-gradient(ellipse at 70% 60%, rgba(6,182,212,0.08) 0%, transparent 50%);"></div>
    </div>

    <div class="relative z-10 text-center max-w-4xl mx-auto pt-24 pb-16">
      <p class="text-sm font-medium tracking-[0.2em] uppercase text-[var(--color-accent-secondary)] mb-6">
        Qinnovate Neural Alliance
      </p>

      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold font-[family-name:var(--font-heading)] tracking-tight mb-6 leading-[1.1]">
        <span class="text-[var(--color-text-primary)]">The ISACA for</span>
        <br />
        <span class="bg-gradient-to-r from-[var(--color-accent-primary)] via-[var(--color-accent-secondary)] to-[var(--color-accent-tertiary)] bg-clip-text text-transparent">
          Neural Interfaces
        </span>
      </h1>

      <p class="text-lg sm:text-xl text-[var(--color-text-muted)] mb-10 max-w-2xl mx-auto leading-relaxed">
        A professional standards body building the governance frameworks, audit methodologies, threat intelligence, and certification programs the BCI industry needs — before mass adoption arrives.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="#join"
          class="px-8 py-3.5 rounded-lg bg-[var(--color-accent-primary)] text-white font-medium hover:bg-[var(--color-accent-primary)]/90 transition-colors"
        >
          Become a Founding Partner
        </a>
        <a
          href="#mission"
          class="px-8 py-3.5 rounded-lg glass text-[var(--color-text-primary)] font-medium hover:bg-white/10 transition-colors"
        >
          Our Mission
        </a>
      </div>
    </div>
  </section>

  <!-- ═══ STATS BAR ═══ -->
  <section class="border-y border-[var(--color-border)] bg-[var(--color-bg-deep)]">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-accent-primary)]">11</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">Bands Modeled</div>
        </div>
        <div>
          <div class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-accent-secondary)]">{totalTechniques}+</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">Threat Techniques</div>
        </div>
        <div>
          <div class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-accent-tertiary)]">4</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">Working Groups</div>
        </div>
        <div>
          <div class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-status-safe)]">v{QIF_VERSION}</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">QIF Framework</div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ MISSION — Why a standards body? ═══ -->
  <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20" id="mission">
    <div class="grid md:grid-cols-2 gap-12 items-start">
      <div>
        <p class="text-sm font-medium tracking-[0.15em] uppercase text-[var(--color-accent-secondary)] mb-3">Mission</p>
        <h2 class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)] mb-6">Why a Standards Body?</h2>
        <div class="space-y-4 text-[var(--color-text-muted)] leading-relaxed">
          <p>
            In the 1960s, IT auditing didn't exist. Then ISACA created the frameworks — COBIT, CISA, CRISC — that defined how organizations govern technology risk. Today, every Fortune 500 company relies on those standards.
          </p>
          <p>
            Brain-computer interfaces are at that same inflection point. Neuralink, Synchron, and Blackrock Neurotech are moving from trials to market. But there is no ISACA for the brain. No professional body defining what "secure" means for a device that reads your thoughts.
          </p>
          <p>
            <strong class="text-[var(--color-text-primary)]">The Neural Alliance fills that gap.</strong> We develop the risk frameworks, threat taxonomies, audit controls, and professional certifications that will define trustworthiness for neural interfaces — before regulators are forced to improvise.
          </p>
        </div>
      </div>

      <div class="space-y-4">
        {principles.map((p) => (
          <div class="glass rounded-xl p-5">
            <h3 class="text-base font-semibold font-[family-name:var(--font-heading)] mb-2">{p.name}</h3>
            <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{p.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ WHAT WE DO — ISACA-style pillars ═══ -->
  <section class="border-y border-[var(--color-border)] bg-[var(--color-bg-deep)] py-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <p class="text-sm font-medium tracking-[0.15em] uppercase text-[var(--color-accent-secondary)] mb-3">What We Do</p>
        <h2 class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)]">Four Pillars of Neural Governance</h2>
        <p class="text-[var(--color-text-muted)] mt-3 max-w-2xl">Modeled after ISACA's approach to IT governance, adapted for the unique challenges of brain-computer interfaces.</p>
      </div>

      <div class="grid sm:grid-cols-2 gap-6">
        <div class="glass rounded-xl p-6 sm:p-8" style="border-left: 4px solid var(--color-accent-primary);">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent-primary)]/10 flex items-center justify-center text-lg" style="color: var(--color-accent-primary);">&#9670;</div>
            <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)]">Standards & Frameworks</h3>
          </div>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-4">
            The QIF specification, NISS scoring system, and NSP protocol — open standards that define what "secure" means for neural interfaces. Equivalent to ISACA's COBIT for IT governance.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">QIF v{QIF_VERSION}</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">NISS Scoring</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">NSP Protocol</span>
          </div>
        </div>

        <div class="glass rounded-xl p-6 sm:p-8" style="border-left: 4px solid #f59e0b;">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-[#f59e0b]/10 flex items-center justify-center text-lg" style="color: #f59e0b;">&#9650;</div>
            <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)]">Threat Intelligence</h3>
          </div>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-4">
            The TARA threat atlas — a living registry of {totalTechniques}+ BCI attack techniques with severity scores, MITRE mappings, and therapeutic analogs. Shared intelligence for the entire field.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">TARA Atlas</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">STIX 2.1 Feeds</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">CVE Pipeline</span>
          </div>
        </div>

        <div class="glass rounded-xl p-6 sm:p-8" style="border-left: 4px solid var(--color-accent-secondary);">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent-secondary)]/10 flex items-center justify-center text-lg" style="color: var(--color-accent-secondary);">&#9632;</div>
            <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)]">Audit & Certification</h3>
          </div>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-4">
            Professional certification for BCI security auditors and compliance officers. Rigorous exam blueprints, control frameworks, and assessor training — like CISA and CRISC for neural systems.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">Audit Controls</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">Certification Program</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">Assessor Training</span>
          </div>
        </div>

        <div class="glass rounded-xl p-6 sm:p-8" style="border-left: 4px solid var(--color-status-safe);">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-status-safe)]/10 flex items-center justify-center text-lg" style="color: var(--color-status-safe);">&#9733;</div>
            <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)]">Regulatory & Policy</h3>
          </div>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-4">
            Crosswalk documents mapping QIF controls to FDA premarket cybersecurity guidance, EU MDR, and emerging neuroethics regulations. Technical depth that informs policy.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">FDA Mapping</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">EU MDR</span>
            <span class="text-xs px-2 py-1 rounded-full glass text-[var(--color-text-faint)]">Policy Papers</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ WORKING GROUPS ═══ -->
  <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="mb-12">
      <p class="text-sm font-medium tracking-[0.15em] uppercase text-[var(--color-accent-secondary)] mb-3">Governance</p>
      <h2 class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)]">Working Groups</h2>
      <p class="text-[var(--color-text-muted)] mt-3 max-w-2xl">Technical committees that drive the Alliance's output. Each group is member-led and open to qualified participants.</p>
    </div>

    <div class="space-y-4">
      {workingGroups.map((wg) => (
        <div class="glass rounded-xl p-6">
          <div class="flex flex-col sm:flex-row sm:items-start gap-4">
            <div class="flex items-center gap-3 sm:w-56 shrink-0">
              <div class="text-xl" style={`color: ${wg.color}`} set:html={wg.icon} />
              <div>
                <h3 class="text-base font-semibold font-[family-name:var(--font-heading)]">{wg.name}</h3>
                <p class="text-xs text-[var(--color-text-faint)]">Chair: {wg.chair}</p>
              </div>
            </div>
            <div class="flex-1">
              <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-3">{wg.focus}</p>
              <div class="flex flex-wrap gap-2">
                {wg.outputs.map((output) => (
                  <span class="text-xs px-2.5 py-1 rounded-full bg-white/5 border border-[var(--color-border)] text-[var(--color-text-faint)]">{output}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- ═══ MEMBERSHIP TIERS ═══ -->
  <section class="border-y border-[var(--color-border)] bg-[var(--color-bg-deep)] py-20" id="membership">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <p class="text-sm font-medium tracking-[0.15em] uppercase text-[var(--color-accent-secondary)] mb-3">Membership</p>
        <h2 class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)]">Join the Alliance</h2>
        <p class="text-[var(--color-text-muted)] mt-3 max-w-2xl">Three tiers of participation, each providing access to shared intelligence, professional development, and the governance process.</p>
      </div>

      <div class="grid sm:grid-cols-3 gap-6">
        {memberBenefits.map((tier) => (
          <div class="glass rounded-xl p-6 flex flex-col" style={`border-top: 3px solid ${tier.color}`}>
            <div class="mb-4">
              <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)]">{tier.tier}</h3>
              <p class="text-xs text-[var(--color-text-faint)] mt-1">{tier.audience}</p>
            </div>
            <ul class="space-y-2.5 flex-1">
              {tier.benefits.map((benefit) => (
                <li class="text-sm text-[var(--color-text-muted)] flex items-start gap-2">
                  <span class="mt-1 shrink-0" style={`color: ${tier.color}`}>&#8250;</span>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ CASE STUDY — Credibility ═══ -->
  <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="mb-10">
      <p class="text-sm font-medium tracking-[0.15em] uppercase text-[var(--color-accent-secondary)] mb-3">Track Record</p>
      <h2 class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)]">Standards Built from Real Research</h2>
    </div>

    <div class="glass rounded-xl p-6 sm:p-8" style="border-left: 4px solid var(--color-accent-primary);">
      <div class="flex items-start gap-3 mb-4">
        <span class="text-xs font-semibold uppercase tracking-wider px-2 py-1 rounded-full bg-[var(--color-status-breach)]/10 text-[var(--color-status-breach)]">CVE Disclosed</span>
        <span class="text-xs font-semibold uppercase tracking-wider px-2 py-1 rounded-full bg-[var(--color-accent-primary)]/10 text-[var(--color-accent-primary)]">CVSS 8.6 High</span>
      </div>

      <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)] mb-2">
        Consumer Audio to Neural Eavesdropping: A 5-Level Attack Chain
      </h3>

      <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-6">
        The Alliance's threat modeling methodology discovered a 9-year-old vulnerability in RealTek HD Audio codec drivers while extending the TARA atlas. Any software process can silently reprogram a headphone jack to function as a microphone — and trace the attack chain from acoustic eavesdropping through physiological monitoring to neural signal capture. This is why standards matter: frameworks find what point solutions miss.
      </p>

      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
        <div class="glass rounded-lg p-4 text-center">
          <div class="text-2xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-status-breach)]">1</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">Unfiled CVE discovered</div>
        </div>
        <div class="glass rounded-lg p-4 text-center">
          <div class="text-2xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-accent-primary)]">5</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">Attack levels mapped</div>
        </div>
        <div class="glass rounded-lg p-4 text-center">
          <div class="text-2xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-accent-secondary)]">5</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">QIF bands crossed</div>
        </div>
        <div class="glass rounded-lg p-4 text-center">
          <div class="text-2xl font-bold font-[family-name:var(--font-heading)] text-[var(--color-accent-tertiary)]">3</div>
          <div class="text-xs text-[var(--color-text-faint)] mt-1">New TARA techniques</div>
        </div>
      </div>

      <div class="flex items-center gap-4 text-sm">
        <a href="/publications/2026-02-11-tara-first-cve-realtek-audio-jack-retasking/" class="text-[var(--color-accent-primary)] hover:text-[var(--color-accent-secondary)] transition-colors font-medium">
          Read the full write-up &#8594;
        </a>
        <a href="/TARA/" class="text-[var(--color-text-faint)] hover:text-[var(--color-text-muted)] transition-colors">
          View TARA atlas &#8594;
        </a>
      </div>
    </div>
  </section>

  <!-- ═══ WHO THIS IS FOR ═══ -->
  <section class="border-y border-[var(--color-border)] bg-[var(--color-bg-deep)] py-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <p class="text-sm font-medium tracking-[0.15em] uppercase text-[var(--color-accent-secondary)] mb-3">Stakeholders</p>
        <h2 class="text-2xl sm:text-3xl font-bold font-[family-name:var(--font-heading)]">Who Should Join</h2>
      </div>

      <div class="grid sm:grid-cols-2 gap-6">
        <div class="glass rounded-xl p-6">
          <h3 class="text-base font-semibold font-[family-name:var(--font-heading)] mb-2">Neurotech Companies</h3>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
            Startups and scale-ups building implantable or wearable neural devices. Shape the standards your products will be measured against.
          </p>
        </div>
        <div class="glass rounded-xl p-6">
          <h3 class="text-base font-semibold font-[family-name:var(--font-heading)] mb-2">Medical Device Manufacturers</h3>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
            Companies navigating FDA premarket cybersecurity requirements. Get ahead of regulatory expectations with pre-mapped controls.
          </p>
        </div>
        <div class="glass rounded-xl p-6">
          <h3 class="text-base font-semibold font-[family-name:var(--font-heading)] mb-2">Research Institutions</h3>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
            Universities and labs running BCI trials. Contribute to the threat taxonomy, validate scoring methodologies, and co-author publications.
          </p>
        </div>
        <div class="glass rounded-xl p-6">
          <h3 class="text-base font-semibold font-[family-name:var(--font-heading)] mb-2">Security Professionals</h3>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
            Pentesters, auditors, and governance professionals looking to specialize in the next frontier. Be among the first certified neural security assessors.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ CONTACT / JOIN ═══ -->
