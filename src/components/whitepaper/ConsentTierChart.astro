---
const total = 99;

const tiers = [
  { name: 'Standard', count: 12, color: '#22c55e', desc: 'Normal informed consent' },
  { name: 'Enhanced', count: 37, color: '#f59e0b', desc: 'Additional safeguards required' },
  { name: 'IRB Required', count: 38, color: '#ef4444', desc: 'Institutional review board oversight' },
  { name: 'Prohibited', count: 12, color: '#7f1d1d', desc: 'Not permissible under any protocol' },
];
---

<div class="glass rounded-xl p-6">
  <h3 class="text-lg font-semibold font-[family-name:var(--font-heading)] mb-1 text-[var(--color-text-primary)]">
    Consent Tier Distribution
  </h3>
  <p class="text-xs text-[var(--color-text-faint)] mb-4">
    Ethical oversight requirements across all 99 catalogued techniques
  </p>

  {/* Stacked bar */}
  <div class="w-full h-10 rounded-lg overflow-hidden flex">
    {tiers.map((tier) => (
      <div
        class="h-full relative group"
        style={`width: ${(tier.count / total) * 100}%; background-color: ${tier.color};`}
      >
        <span class="absolute inset-0 flex items-center justify-center text-xs font-semibold text-white drop-shadow-sm">
          {tier.count > 8 ? tier.count : ''}
        </span>
      </div>
    ))}
  </div>

  {/* Legend */}
  <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-3">
    {tiers.map((tier) => (
      <div class="flex items-start gap-2">
        <span
          class="mt-1 w-3 h-3 rounded-full shrink-0"
          style={`background-color: ${tier.color};`}
        />
        <div>
          <span class="text-sm font-medium text-[var(--color-text-primary)]">
            {tier.name}
          </span>
          <span class="ml-1 text-sm text-[var(--color-text-muted)]">
            ({tier.count})
          </span>
          <p class="text-xs text-[var(--color-text-faint)] leading-tight">
            {tier.desc}
          </p>
        </div>
      </div>
    ))}
  </div>

  <p class="mt-4 pt-3 border-t border-[var(--color-border)] text-xs text-[var(--color-text-muted)] text-center">
    <span class="font-semibold text-[var(--color-text-primary)]">99</span> techniques across
    <span class="font-semibold text-[var(--color-text-primary)]">4</span> consent tiers
  </p>
</div>
